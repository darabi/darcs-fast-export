import sys
import os
import time

class Handler:
	def __init__(self):
		self.marks = {}
		self.files = []
		self.ch = None
		self.line = None

	def read_next_line(self, strip=True):
		self.line = ""
		if self.ch:
			self.line += self.ch
			self.ch = None
		self.line += sys.stdin.readline()
		if strip:
			self.line = self.line.strip()

	def read(self, length):
		buf = ""
		if self.ch:
			buf += self.ch
			self.ch = None
		buf += sys.stdin.read(length)
		return buf

	def skip_optional_lf(self):
		self.ch = sys.stdin.read(1)
		if self.ch == "\n":
			self.ch = None

	def bug(self, s):
		raise Exception(s)

	def get_date(self, ts, tz):
		s = time.strftime("%a %b %d %H:%M:%S %Y", time.gmtime(int(ts)))
		items = s.split(' ')
		return " ".join(items[:-1]) + " " + tz + " " + items[-1]

	def handle_blob(self):
		while True:
			self.read_next_line()
			if self.line.startswith("mark :"):
				num = int(self.line[6:])
			elif self.line.startswith("data "):
				length = int(self.line[5:])
				self.marks[num] = self.read(length)
				return
			else:
				self.bug("'%s': invalid blob subcommand" % line)

	def handle_commit(self):
		adds = []
		author = None
		while True:
			self.read_next_line()
			if self.line.startswith("mark :"):
				pass
			elif self.line.startswith("author "):
				items = self.line[7:].split(' ')
				author = " ".join(items[:-2])
				date = self.get_date(items[-2], items[-1])
			elif self.line.startswith("committer "):
				if author:
					continue
				items = self.line[10:].split(' ')
				author = " ".join(items[:-2])
				date = self.get_date(items[-2], items[-1])
			elif self.line.startswith("data "):
				length = int(self.line[5:])
				msg = self.read(length)
				self.skip_optional_lf()
				items = msg.split('\n')
				short = items[0]
				long = "\n".join(items[1:])
			elif self.line.startswith("M "):
				items = self.line.split(' ')
				idx = int(items[2][1:])
				path = items[3]
				sock = open(path, "w")
				sock.write(self.marks[idx])
				sock.close()
				if path not in self.files:
					adds.append(path)
					self.files.append(path)
				del self.marks[idx]
			elif self.line.startswith("D "):
				path = self.line[2:]
				os.unlink(path)
				self.files.remove(path)
			elif self.line.startswith("from "):
				pass
			elif self.line.startswith("merge "):
				pass
			elif not len(self.line):
				for i in adds:
					os.system("darcs add %s" % i)
				sock = os.popen("darcs record --ignore-times -a --pipe", "w")
				buf = [date, author, short, long]
				sock.write("\n".join(buf))
				sock.close()
				return
			else:
				self.bug("'%s': invalid commit subcommand" % self.line)

	def handle_progress(self, s):
		print "progress [%s] %s" % (time.strftime("%Y-%m-%d %H:%M:%S", time.localtime()), s)
		sys.stdout.flush()

	def handle(self):
		while True:
			self.read_next_line(False)
			if not self.line:
				break
			self.line = self.line.strip()
			if not len(self.line):
				continue
			if self.line == "blob":
				self.handle_blob()
			elif self.line.startswith("reset"):
				pass
			elif self.line.startswith("commit"):
				self.handle_commit()
			elif self.line.startswith("progress"):
				self.handle_progress(self.line[9:])
			else:
				self.bug("'%s': invalid command" % self.line)

if __name__ == "__main__":
	h = Handler()
	h.handle()
